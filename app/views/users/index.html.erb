<!-- Content -->
<div id="content">
	
	<!-- Box -->
	<div class="box">
		<!-- Box Head -->
		<div class="box-head">
			<h2 class="left">Listing Users</h2>
			<div class="right">
				<label>search users</label>
				<input type="text" class="field small-field" />
				<input type="submit" class="button" value="search" />
			</div>
		</div>
		<!-- End Box Head -->	

		<!-- Table -->
		<div class="table">
			<table width="100%" border="0" cellspacing="0" cellpadding="0">
				<tr>
					<th width="13"><input type="checkbox" class="checkbox" /></th>
					<th>Username</th>
				    <th>Full Name</th>
				    <th>Email</th>
				    <th>Phone</th>
				    <th>User Type</th>
					<th></th>
				    <th></th>
				    <th></th>
				</tr>

				<% @users.each do |user| %>
				  <tr>
					<td><input type="checkbox" class="checkbox" /></td>
				    <td><%= user.name %></td>
				    <td><%= user.first + " " + user.last %></td>
				    <td><%= user.email %></td>
				    <td><%= user.phone %></td>
				    <td><%= user.user_type == 0 ? 'Admin' : 'Normal' %></td>
				    <td><%= link_to 'Show', user %></td>
				    <td><%= link_to 'Edit', edit_user_path(user), :class => 'ico edit' %></td>
				    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class => 'ico del' %></td>
				  </tr>
				<% end if @users %>

			</table>


			<!-- Pagging -->
			<div class="pagging">
				<div class="left">Showing 1-<%= @users.length if @users %> of <%= @users.length if @users %></div>
				<div class="right">
					<a href="#">Previous</a>
					<a href="#">1</a>
					<a href="#">2</a>
					<a href="#">3</a>
					<a href="#">4</a>
					<a href="#">245</a>
					<span>...</span>
					<a href="#">Next</a>
					<a href="#">View all</a>
				</div>
			</div>
			<!-- End Pagging -->

		</div>
		<!-- Table -->

	</div>
	<!-- End Box -->

	<%= link_to "Log In", log_in_path %> |
	<%= link_to "Forgot Password", forgot_password_path %>
	
	
</div>
<!-- End Content -->

<!-- Sidebar -->
<div id="sidebar">
	
	<!-- Box -->
	<div class="box">
		
		<!-- Box Head -->
		<div class="box-head">
			<h2>Management</h2>
		</div>
		<!-- End Box Head-->
		
		<div class="box-content">
			<%= link_to 'Add New User', new_user_path, :class => 'btn' %>
			<div class="cl">&nbsp;</div>
			
			<p class="select-all"><input type="checkbox" class="checkbox" /><label>select all</label></p>
			<p><a href="#">Delete Selected</a></p>
			
		</div>
	</div>
	<!-- End Box -->
</div>
<!-- End Sidebar -->


