<% if @course.errors.any? %>
      alert('<%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:\n'

  
      <% @course.errors.full_messages.each do |msg| %>
			+ '* <%= msg %> \n'
      <% end %>
 	);
<% else %>
	$('.box-head').html('<h2>Course Created</h2>');

	$('.form p').hide();
	$('#customWidget').hide();


	$('#ajax-response').html('<h1>Course created successfully!</h1><br />');
	$('#ajax-response').fadeIn();



	$('.buttons').html('<a href="/courses" class="button">Done</a>');
<% end %>


