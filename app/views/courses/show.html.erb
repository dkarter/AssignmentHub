<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @course.name %>
</p>

<p>
  <b>Course number:</b>
  <%= @course.course_number %>
</p>

<p>
  <b>School:</b>
  <%= @course.school %>
</p>

<p>
  <b>Section:</b>
  <%= @course.section %>
</p>

<p>
  <b>Code:</b>
  <%= @course.code %>
</p>

<p>
  <b>Teachers:</b>
	<ol>
		<% for teacher in @course.teachers %>
			<li><%= teacher.first + " " + teacher.last %></li>
		<% end %>
	</ol>
</p>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
