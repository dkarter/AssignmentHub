<h3>Forgot password?</h3>

<h4>Provide your email address to send a new password.</h4>

<% form_tag :action => 'forgot_password' do %>
    <div class="field">
      <%= @user.label "Username" %><br />
      <%= @user.text_field :name %>
    </div>

    <div class="field">
      <%= @user.label "Email address" %><br />
      <%= @user.text_field :email %>
    </div>

    <div class="actions">
      <%= @user.submit %>
    </div>

<% end %>

<%= link_to 'Back', users_path %>